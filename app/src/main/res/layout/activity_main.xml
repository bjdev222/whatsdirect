<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wall"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Whats Direct"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        ></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner2"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"

        android:orientation="horizontal">
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
        android:id="@+id/etnum"
        android:layout_width="205dp"
        android:padding="7dp"
        android:layout_height="55dp"
        android:gravity="top|start"
        android:inputType="number"
        android:hint="Enter Number.."
        android:lines="5"
        android:scrollHorizontally="false"></EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/etmsg"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:padding="7dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:background="@drawable/corner2"
        android:hint="Type Message..."
        android:lines="5"
        android:scrollHorizontally="false"></EditText>

    <Button
        android:id="@+id/sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:drawableRight="@drawable/ic_baseline_send_24"
        android:text="Send"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="@drawable/corner3"
        android:text="Quick Response"></TextView>
    <TextView
        android:id="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:background="@drawable/corner3"
        android:text="Hi."></TextView>
    <TextView
        android:id="@+id/q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:textColor="#000000"

        android:background="@drawable/corner3"
        android:text="Hello.."></TextView>
    <TextView
        android:id="@+id/q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/corner3"
        android:padding="8dp"
        android:textColor="#000000"

        android:layout_margin="5dp"
        android:text="How are you?"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.facebook.ads.NativeAdLayout
            android:id="@+id/nativeAdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>



</LinearLayout>